{erl_opts, [
    % mandatory
    debug_info,
    warnings_as_errors,
    warn_export_all,
    warn_missing_spec,
    warn_untyped_record,
    warn_export_vars,

    % by default
    warn_unused_record,
    warn_bif_clash,
    warn_obsolete_guard,
    warn_unused_vars,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_deprecated_function,

    % at will
    % bin_opt_info
    % no_auto_import
    warn_missing_spec_all
]}.

{deps, [
    {jsx, "3.1.0"},
    {jose, "1.11.2"},
    {genlib, {git, "https://github.com/vality/genlib.git", {branch, "master"}}},
    {thrift, {git, "https://github.com/vality/thrift_erlang.git", {branch, "master"}}}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    deprecated_functions_calls,
    deprecated_functions
]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        race_conditions,
        unknown
    ]},
    {plt_apps, all_deps},
    {plt_extra_apps, [eunit, common_test]}
]}.

{plugins, [
    {erlfmt, "0.14.1"}
]}.

{erlfmt, [
    {print_width, 120},
    {files, ["{src,include,test}/*.{hrl,erl}", "rebar.config", "elvis.config"]}
]}.
